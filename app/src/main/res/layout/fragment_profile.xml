<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extraMargin"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/edit_profile_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFirstNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/marginProfile"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/first_name"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfile" />

        <ImageView
            android:id="@+id/ivEdit1"
            android:layout_width="@dimen/editMargin"
            android:layout_height="@dimen/editMargin"
            android:layout_marginEnd="@dimen/editMargin"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFirstNameProfile" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/dollarLeft"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/profile"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFirstNameProfile"
            tools:ignore="SpUsage" />

        <View
            android:id="@+id/lineHor1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginTop="@dimen/mediumMargin"
            android:background="@color/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFirstName" />

        <TextView
            android:id="@+id/tvLastNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/marginProfile"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/last_name"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineHor1" />

        <ImageView
            android:id="@+id/ivEdit2"
            android:layout_width="@dimen/editMargin"
            android:layout_height="@dimen/editMargin"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvLastNameProfile" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/dollarLeft"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/profile"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLastNameProfile"
            tools:ignore="SpUsage" />

        <View
            android:id="@+id/lineHor2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginTop="@dimen/mediumMargin"
            android:background="@color/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLastName" />

        <TextView
            android:id="@+id/tvEmailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/marginProfile"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineHor2" />

        <ImageView
            android:id="@+id/ivEdit3"
            android:layout_width="@dimen/editMargin"
            android:layout_height="@dimen/editMargin"
            android:layout_marginEnd="@dimen/editMargin"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/ic_edit"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvEmailProfile" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/dollarLeft"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/profile"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmailProfile"
            tools:ignore="SpUsage" />

        <View
            android:id="@+id/lineHor3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginTop="@dimen/mediumMargin"
            android:background="@color/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmail" />

        <TextView
            android:id="@+id/tvPhoneNumberProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/marginProfile"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/phone_number"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineHor3" />

        <ImageView
            android:id="@+id/ivEdit4"
            android:layout_width="@dimen/editMargin"
            android:layout_height="@dimen/editMargin"
            android:layout_marginEnd="@dimen/marginProfile"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPhoneNumberProfile" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/dollarLeft"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/profile"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneNumberProfile"
            tools:ignore="SpUsage" />

        <View
            android:id="@+id/lineHor4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginTop="15dp"
            android:background="@color/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPhone" />

        <TextView
            android:id="@+id/tvMyFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginProfile"
            android:layout_marginTop="@dimen/marginProfile"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/my_favorites"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineHor4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMyFavorites" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>